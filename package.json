{
    "name": "login-oculto",
    "version": "1.0.0",
    "description": "Interface moderna de login com animações e integração Google OAuth",
    "main": "index.html",
    "type": "module",
    "scripts": {
        "start": "npm run build:config && serve .",
        "build": "npm run build:config",
        "build:config": "node scripts/build-config.js",
        "lint": "eslint . --ext .js",
        "lint:fix": "eslint . --ext .js --fix",
        "format": "prettier --write \"**/*.{js,json,css,html,md}\"",
        "format:check": "prettier --check \"**/*.{js,json,css,html,md}\"",
        "prepare": "husky install"
    },
    "keywords": [
        "login",
        "oauth",
        "google-login",
        "animation",
        "css3",
        "html5",
        "javascript"
    ],
    "author": "Luis Carlos (https://github.com/LuisCarlos01)",
    "license": "MIT",
    "repository": {
        "type": "git",
        "url": "git+https://github.com/LuisCarlos01/login-oculto.git"
    },
    "bugs": {
        "url": "https://github.com/LuisCarlos01/login-oculto/issues"
    },
    "homepage": "https://github.com/LuisCarlos01/login-oculto#readme",
    "devDependencies": {
        "dotenv": "^16.3.1",
        "eslint": "^8.56.0",
        "prettier": "^3.1.1",
        "husky": "^8.0.3",
        "lint-staged": "^15.2.0",
        "serve": "^14.2.1"
    },
    "lint-staged": {
        "*.js": [
            "eslint --fix",
            "prettier --write"
        ],
        "*.{html,css,md,json}": [
            "prettier --write"
        ]
    }
}
